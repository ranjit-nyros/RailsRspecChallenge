<h1>Events</h1>
<% if !@events.blank? %>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Start date</th>
      <th>End date</th>
      <th>Location</th>
      <th>Entry type</th>
      <th>Status</th>
      <th>Event category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.title %></td>
        <td><%= event.start_date %></td>
        <td><%= event.end_date %></td>
        <td><%= event.location %></td>
        <td><%= event.entry_type %></td>
        <td><%= event.status %></td>
        <td><%= event.event_category %></td>
        <td><%= link_to 'Show', event %></td>
        <% if event.user == current_user %>
          <td><%= link_to 'Edit', edit_event_path(event)  %></td>
           <td> <%= link_to 'Make InActive' ,deactivate_event_event_path(event),method: 'post' ,data:{confirm: "Are you sure? Want to in-activate it ?"} if event.status== 'Published' %>
          </td>
          <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } if event.user == current_user%></td>        
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<% else %>
<p>No Events</p>
<% end %>
<br>

<%= link_to 'New Event', new_event_path %>
